<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring
       http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camel:camelContext>
        <camel:propertyPlaceholder id="properties" location="classpath:jmsConsumer.properties"/>

        <camel:route id="jms-tag-route" streamCache="true">
            <camel:from id="route-from-incoming-tags" uri="activemq:queue:{{queue.tag}}"/>
            <camel:to id="route-to-tag-process" uri="tagProcessor"/>
        </camel:route>

        <camel:route id="jms-comment-route" streamCache="true">
            <camel:from id="route-from-incoming-comments" uri="activemq:queue:{{queue.comment}}"/>
            <camel:to id="route-to-comment-process" uri="commentProcessor"/>
            <camel:to id="route-to-response-queue" uri="activemq:queue:{{queue.responseComment}}"/>
        </camel:route>
    </camel:camelContext>

    <bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="${jms.service.address}"/>
    </bean>
    <bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory"
          init-method="start" destroy-method="stop">
        <property name="maxConnections" value="6"/>
        <property name="connectionFactory" ref="jmsConnectionFactory"/>
    </bean>

</beans>